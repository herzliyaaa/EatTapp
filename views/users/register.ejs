<% layout('layouts/boilerplate')%>

  <!DOCTYPE html>
  <html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>EatTapp</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous" />

    <link rel="stylesheet" href="/stylesheets/app.css" />
    <link rel="stylesheet" href="/stylesheets/login.css" />
  </head>


  <body>
    <div class="container d-flex justify-content-center align-items-center mt-5 col-md-12">
      <div class="login-container row mb-3">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
          <!-- <div class="card shadow"> -->
            <h4 class="card-title text-end"  style="color: white;font-weight: 700;">Create an account</h5>
            <div class="login-content card-body">
              
              <form action="/register" method="POST" class="validated-form" novalidate>
                <div class="mb-3">
                  <label class="log-label col-sm-6 col-form-label" for="username">Username</label>

                  <input class="log-inputs form-control" type="text" id="username" name="username" autofocus required />
                  <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                  <label class="log-label form-label" for="email">Email</label>
                  <input class="log-inputs form-control" type="email" id="email" name="email" required />
                  <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                  <label class="log-label form-label" for="password">Password</label>
                  <input class="log-inputs form-control" type="password" id="password" name="password" required />
                  <div class="valid-feedback">Looks good!</div>
                </div>
                <button class="reg-resto btn">Register</button>
              </form>

            </div>
            <!-- </div> -->

            <div class="col mt-md-4 ">
              Already have an account?
              <a class="register-link" style="font-weight: 700; color: black;" href="/login">Sign In</a>
            </div>

          </div>
        </div>
      </div>
  </body>